<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>users</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body class="container" style="margin-top: 50px; background-color:antiquewhite;">


   
    <div class="card-header" styte="margin:0 auto;">
        <h1 style=" text-align:center; font-family: Georgia, 'Times New Roman', Times, serif;">WORK LIST</h1>
    </div>
    <div class="card">
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Created</th>
                            <th scope="col">Title</th>
                            <th scope="col">Content</th>
                            <th scope="col">sendNotification</th>
                            <th scope="col">Remainder_time</th>
                        </tr>
                    </thead>
                    <tbody >
                      
                        <%  convert=(str)=> {
                            var date=new Date(str),
                            mnth=("0" + (date.getMonth() + 1)).slice(-2),
                            day=("0" +date.getDate()).slice(-2);
                            return [day,mnth,date.getFullYear()].join("-"); 
                        }%>
                        <%
                            SNF=(int)=>{
                                let s;
                                if(int==0){
                                    s="No";
                                }
                                else{
                                    s="Yes";
                                }
                                return s;
                            }
                        
                        %>
                        <% for(let i=0; i < data.length; i++) { %>
                            <tr>
                                <th scope="row">
                                    <%= data[i].id%>
                                </th>
                                <td>
                                   
                                    <%= convert(data[i].created) %>
                                </td>
                                <td>
                                    <%= data[i].title %>
                                </td>
                                <td>
                                    <%= data[i].content %>
                                </td>
                                <td>
                                    <%= SNF(data[i].sendNotification) %>
                                </td>
                                <td>
                                    <%= convert(data[i].remainder_time) %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <% } %>
                    <div class="form-group">
                        <a href="/users" class="btn btn-info">Back</a>
                        <!-- <a href="/note/add" class="btn btn-info">add work</a> -->
                    </div>
                    <!-- if result is empty -->
                    <% if(!data.length) { %>
                        <p class="text-center">No user found!</p>
                        <% } %>
        </div>
    </div>

</body>

</html>