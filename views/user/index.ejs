<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TodoList</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="css/admin.css">
</head>

<body class="container" style="margin-top: 50px;">
    <h1 class="text-center mb-5 text-uppercase text-muted">TodoList Management</h1>
    <div class="card">

        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">

                    <a href="/page/logout" class="btn btn-danger">Logout</a>
                </li>
                <li class="nav-link ml-auto">
                    <a href="/users/add" class="nav-link active">Add user</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">firstName</th>
                            <th scope="col">lastName</th>
                            <th scope="col">birthDay</th>
                            <th scope="col">email</th>
                            <th scope="col">gender</th>

                            <th width="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% convert=(str)=> {
                            var date=new Date(str),
                            mnth=("0" + (date.getMonth() + 1)).slice(-2),
                            day=("0" +date.getDate()).slice(-2);
                            return [day,mnth,date.getFullYear()].join("-");
                            }%>
                            <% for(let i=0; i < data.length; i++) { %>
                                <tr>
                                    <th scope="row">
                                        <%= data[i].iduser %>
                                    </th>
                                    <td>
                                        <%= data[i].firstName %>
                                    </td>
                                    <td>
                                        <%= data[i].lastName %>
                                    </td>
                                    <td>
                                        <%= convert(data[i].birthDay) %>
                                    </td>
                                    <td>
                                        <%= data[i].email %>
                                    </td>
                                    <td>
                                        <%= data[i].gender %>
                                    </td>
                                    <td>
                                        <ul class="nav nav-pills ml-auto">
                                            <!-- <li>
                                                <a class="action" href="../users/edit/<%= data[i].iduser %>"
                                                    class="">Edit</a>
                                            </li> -->
                                            <li>
                                                <a class="action" href="../users/delete/<%= data[i].iduser %>"
                                                    onclick="return alert('Are you sure?')" class="">Delete</a>
                                            </li>
                                            <li>
                                                <a class="action" href="../note/notelist/<%= data[i].iduser %>"
                                                    class="">Details</a>
                                            </li>
                                        </ul>



                                    </td>
                                </tr>
                                <% } %>
                    </tbody>
                </table>
                <% } %>

                    <!-- if result is empty -->
                    <% if(!data.length) { %>
                        <p class="text-center">No user found!</p>
                        <% } %>
        </div>
    </div>

</body>

</html>